<div class="content_collection_container">
  <h1>Tracks by Album </h1>
  <div class="content_collection_card">
    {{#each tracks}}
    <ul>
      <li class="content_collection_card_name">{{ this.name }}</td>
        {{#if this.preview_url}}
      <li><audio controls src="{{ this.preview_url }}"></audio></li>
      {{else }}
      <li> No audio preview available </li>
      {{/if }}
    </ul>
    {{/each}}
  </div>
</div>